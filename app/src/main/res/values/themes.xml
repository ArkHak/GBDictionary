<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SplashScreen -->
    <style name="Theme.NewSplash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
        <item name="windowSplashScreenBackground">@color/background_splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_spl_screen_center</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/background_splash_screen
        </item>
    </style>

</resources>